    "# import sympy \n",
    "from sympy import *\n",
    "x = Symbol('x') \n",
    "expr = x**4 + 3*x**2 + 10\n",
    "y = Derivative(expr, x)\n",
    "z =  expr.diff(x)\n",
    "print(str(y) + \" = \" + str(z))\n",
    "z = lambdify(x, z)\n",
    "expr = lambdify(x, expr)\n",
    "n=-0.001\n",
    "p=5\n",
    "itr=1000\n",
    "i=0\n",
    "while i<itr:\n",
    "    p=p+(n*z(p))\n",
    "    i=i+1\n",
    "else:\n",
    "    print(\"minimum point is\",int(p))\n",
    "    print(\"minimum value is\",int(expr(p)))"
