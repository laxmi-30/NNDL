    "yp=0\n",
    "s=0\n",
    "for i in range(0,ns,1):\n",
    "    yp=y[i]-m*x[i]+c  #calculating 'yp' value for each sample\n",
    "    s=s+(y[i]-yp)**2  #summing them up to calculate MSE\n",
    "s=s/ns\n",
    "print(\"MSE :\",s)"
