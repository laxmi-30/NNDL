    "#Assignement 3\n",
    "#STOCHASTIC GRADIENT DESCENT\n",
    "\n",
    "x=[0.2,0.4,0.6,0.8]\n",
    "y=[3.4,3.8,4.2,4.6]\n",
    "\n",
    "#1\n",
    "m=1\n",
    "c=1\n",
    "n=-0.1\n",
    "epochs=2\n",
    "ns=2\n",
    "#2\n",
    "it=0\n",
    "for i in range(0,epochs,1):\n",
    "    j=0\n",
    "    for j in range(0,ns,1):\n",
    "        dem=(-1)*((y[j]-m*x[j]-c)*x[j])\n",
    "        dec=(-1)*(y[j]-m*x[j]-c)\n",
    "        dm=(-1)*n*dem\n",
    "        dc=(-1)*n*dec\n",
    "        m=m+dm\n",
    "        c=c+dc\n",
    "        #print(m,c,x[j],y[j],'dem =',dem,dec,dm,dc,m,c)\n",
    "print(\"m =\",m,'c=',c)\n"
   ]
  },
